<div class="list" id="list-<%= list.id %>">
  <div class="list-title">
    <span class="list-content"><%= link_to list.content, edit_list_path(list.id) %></span>
    <span class="timestamp">
      最終更新：<%= list.updated_at %>
    </span>
  </div>
  <div class="list-item">
    <span class="item">
        <% list.items.each do |item| %>
          <li><%= item.content %></li>
        <% end %>
        <%= form_with(model: [@list, @item]) do |f| %>
          <div class="field">
            <%= f.text_field :content, placeholder: 'アイテムのタイトルを入力してください' %>
            <%= f.hidden_field :list_id, value: list.id %>
          </div>
          <%= f.submit 'アイテム作成', class: 'btn btn-primary' %>
        <% end %>
    </span>
  </div>
</div>