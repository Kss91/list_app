<h1>リスト編集</h1>
<%= form_with(model: @list) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
  <div class="field">
    <%= f.text_field :content, placeholder: 'リストの新しいタイトルを入力してください' %>
  </div>
  <%= f.submit 'リスト名　修正', class: 'btn btn-primary' %>
  <% if current_user?(@list.user) %>
    <%= link_to 'リスト削除', @list, data: { 'turbo-method': :delete, turbo_confirm: '本当に削除しますか？' }, class: 'btn btn-danger' %>
  <% end %>
<% end %>
