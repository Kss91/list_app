<% provide(:title, 'ユーザー一覧') %>
<h1>ユーザー一覧</h1>

<%= will_paginate %>

<ul class="users">
  <% @users.each do |user| %>
    <li>
      <%= link_to user.name, user %>
      <% if current_user.admin? && !current_user?(user) %>
       | <%= link_to 'ユーザー削除', user, data: { "turbo-method": :delete, turbo_confirm: "本当に削除しますか？" } %>
      <% end %>
    </li>
  <% end %>
</ul>

<%= will_paginate %>
